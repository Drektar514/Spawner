using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class Spawner : MonoBehaviour
{
    [SerializeField] private Enemy _enemyPrefab;
    [SerializeField] private Transform _containerSpawnPoints;

    private Transform[] _points;
    private float _spawnTime = 2;
    private float _currentTime;

    private void Start()
    {
        _points = new Transform[_containerSpawnPoints.childCount];
        for (int i = 0; i < _containerSpawnPoints.childCount; i++)
        {
            _points[i] = _containerSpawnPoints.GetChild(i);
        }
        _currentTime = _spawnTime;
    }

    private void Update()
    {
        _currentTime -= Time.deltaTime;

        if (_currentTime <= 0)
        {
            int randomPoint = Random.Range(0, _points.Length);
            Instantiate(_enemyPrefab, _points[randomPoint]);
            _currentTime = _spawnTime;
        }
    }

}
